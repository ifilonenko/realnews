<div class='modal fade' id='signup'>
  <div class='modal-dialog modal-sm'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'>
          <span aria-hidden='true'>&times;</span>
          <span class='sr-only'>Close</span>
        </button>
        <h3>Sign up</h3>
        <p>Redefining reporting by producing your own content.</p>
      </div>
      <div class='modal-body signupModal' id='signupModal'>
        <div id='userSignup'>
          <div class="alert alert-danger Alerts Hidden" role="alert"></div>
          <%= form_for(User.new, html: { id: 'new_user' }) do |u| %>
            <input type='hidden' name='source' />
            <div class='form-group'>
              <label>
                <span>Your Name</span>
              </label>
              </br>
              <label>
                <%= u.text_field :fname, class: 'form-control', placeholder: 'First Name' %>
              </label>
              <label>
                <%= u.text_field :lname, class: 'form-control', placeholder: 'Last Name' %>
              </label>
            </div>
            <div class='form-group'>
              <label>
                <span>Your bio</span>
              </label>
              </br>
              <label>
                <%= u.text_area :bio, class: 'form-control bioArea', placeholder: 'Short bio (optional)' %>
              </label>
            </div>
            <div class='form-group'>
              <label>
                <span>Your Email</span>
              </label>
              </br>
              <label>
                <%= u.email_field :email, class: 'form-control', placeholder: 'Email' %>
              </label>
            </div>
            <div class='form-group'>
              <label>
                <span>Password</span>
              </label>
              </br>
              <label>
                <%= u.password_field :password, class: 'form-control', placeholder: 'Password' %>
              </label>
            </div>
            <div class='form-group'>
              <label>
                <span>Profile Picture (optional)</span>
              </label>
              </br>
              <label>
                <%= u.file_field :propic %>
              </label>
            </div>
            <%= u.submit 'Sign Up', class: 'btn btn-primary', id: 'signUp' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
